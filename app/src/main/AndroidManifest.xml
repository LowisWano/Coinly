<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/coinlylogo2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/coinlylogo2"
        android:supportsRtl="true"
        android:theme="@style/Theme.Coinly"
        tools:targetApi="31">
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".QRScanner"
            android:exported="true" />
        <activity
            android:name=".RequestTransactionHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".TransactionDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"><intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".CreatePinActivity"
            android:exported="false" />
        <activity
            android:name=".ConfirmPinActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".TransactionHistoryActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".WalletActivity"
            android:exported="false" />
    </application>

</manifest>